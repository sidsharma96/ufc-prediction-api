# Application
APP_NAME=UFC Prediction API
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/ufc_predictions
DATABASE_ECHO=false

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs
THE_ODDS_API_KEY=your-odds-api-key
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/mma/ufc

# Rate Limiting
RATE_LIMIT_ANONYMOUS=30
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_PREMIUM=500

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
